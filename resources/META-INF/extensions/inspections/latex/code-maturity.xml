<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.codematurity.LatexOverInsteadOfFracInspection"
                         groupPath="%inspection.grouppath.latex" groupName="%inspection.group.code.maturity" displayName="%inspection.display.use.of.over.discouraged"
                         enabledByDefault="true"
                         level="WARNING" />
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.codematurity.LatexPrimitiveStyleInspection"
                         groupPath="%inspection.grouppath.latex" groupName="%inspection.group.code.maturity" displayName="%inspection.display.tex.styling.primitives.usage.is.discouraged"
                         enabledByDefault="true"
                         level="WARNING" />
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.codematurity.LatexDiscouragedUseOfDefInspection"
                         groupPath="%inspection.grouppath.latex" groupName="%inspection.group.code.maturity" displayName="%inspection.display.discouraged.use.of.def.and.let"
                         enabledByDefault="true"
                         level="WARNING" />
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.codematurity.LatexAvoidEqnarrayInspection"
                         groupPath="%inspection.grouppath.latex" groupName="%inspection.group.code.maturity" displayName="%inspection.display.avoid.eqnarray"
                         enabledByDefault="true"
                         level="WARNING" />
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.codematurity.LatexPrimitiveEquationInspection"
                         groupPath="%inspection.grouppath.latex" groupName="%inspection.group.code.maturity" displayName="%inspection.display.discouraged.use.of.primitive.tex.display.math"
                         enabledByDefault="true"
                         level="WARNING" />
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.codematurity.LatexMakeatletterInspection"
                         groupPath="%inspection.grouppath.latex" groupName="%inspection.group.code.maturity" displayName="%inspection.display.discouraged.use.of.makeatletter.in.tex.sources"
                         enabledByDefault="true"
                         level="WARNING" />
    </extensions>
</idea-plugin>