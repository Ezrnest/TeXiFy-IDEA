<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.typesetting.spacing.LatexMathOperatorEscapeInspection"
                         groupPath="LaTeX" groupBundle="messages.TexifyBundle" groupKey="inspection.group.typesetting.issues" bundle="messages.TexifyBundle" key="inspection.display.non.escaped.common.math.operators"
                         enabledByDefault="true"
                         level="WARNING" />
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.typesetting.spacing.LatexNonBreakingSpaceInspection"
                         groupPath="LaTeX" groupBundle="messages.TexifyBundle" groupKey="inspection.group.typesetting.issues" bundle="messages.TexifyBundle" key="inspection.display.non.breaking.spaces.before.references"
                         enabledByDefault="true"
                         level="WARNING" />
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.typesetting.spacing.LatexEllipsisInspection"
                         groupPath="LaTeX" groupBundle="messages.TexifyBundle" groupKey="inspection.group.typesetting.issues" bundle="messages.TexifyBundle" key="inspection.display.ellipsis.with.instead.of.ldots.or.dots"
                         enabledByDefault="true"
                         level="WARNING" />
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.typesetting.spacing.LatexSpaceAfterAbbreviationInspection"
                         groupPath="LaTeX" groupBundle="messages.TexifyBundle" groupKey="inspection.group.typesetting.issues" bundle="messages.TexifyBundle" key="inspection.display.normal.space.after.abbreviation"
                         enabledByDefault="true"
                         level="WEAK WARNING" />
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.typesetting.spacing.LatexSentenceEndWithCapitalInspection"
                         groupPath="LaTeX" groupBundle="messages.TexifyBundle" groupKey="inspection.group.typesetting.issues" bundle="messages.TexifyBundle" key="inspection.display.end.of.sentence.space.after.sentences.ending.with.capitals"
                         enabledByDefault="true"
                         level="WEAK WARNING" />
        <localInspection language="Latex" implementationClass="nl.hannahsten.texifyidea.inspections.latex.typesetting.spacing.LatexExtremeInequalityInspection"
                         groupPath="LaTeX" groupBundle="messages.TexifyBundle" groupKey="inspection.group.typesetting.issues" bundle="messages.TexifyBundle" key="inspection.display.use.the.matching.amssymb.symbol.for.extreme.inequalities"
                         enabledByDefault="true"
                         level="WEAK WARNING" />
    </extensions>
</idea-plugin>