<idea-plugin>
    <actions>
        <group id="texify.LatexMenuEdit" text="%group.texify.LatexMenuEdit.text" description="%group.texify.LatexMenuEdit.description" popup="true"
               class="nl.hannahsten.texifyidea.action.group.LatexEditMenuGroup">
            <!-- MPS doesn't have the EditSmartGroup group, so we register directly in the Edit menu. -->
            <add-to-group group-id="EditMenu" anchor="last"/>
            <override-text place="GoToAction" text="%group.texify.LatexMenuEdit.GoToAction.text"/>

            <!-- Toggle Star -->
            <action class="nl.hannahsten.texifyidea.action.LatexToggleStarAction" id="texify.ToggleStar" text="%action.texify.ToggleStar.text"
                    description="%action.texify.ToggleStar.description" icon="nl.hannahsten.texifyidea.TexifyIcons.TOGGLE_STAR">
                <keyboard-shortcut first-keystroke="alt shift 8" keymap="$default"/>
            </action>

            <separator/>

            <!-- Table Creation Wizard-->
            <action class="nl.hannahsten.texifyidea.action.wizard.table.LatexTableWizardAction" id="texify.TableCreationWizard"
                    text="%action.texify.TableCreationWizard.text"
                    description="%action.texify.TableCreationWizard.description"/>

            <!-- Graphic Wizard-->
            <action class="nl.hannahsten.texifyidea.action.wizard.graphic.InsertGraphicWizardAction" id="texify.GraphicInsertWizard"
                    text="%action.texify.GraphicInsertWizard.text"
                    description="%action.texify.GraphicInsertWizard.description"/>

            <!-- Dummy text -->
            <action class="nl.hannahsten.texifyidea.action.wizard.ipsum.InsertDummyTextAction" id="texify.DummyTextWizard"
                    text="%action.texify.DummyTextWizard.text"
                    description="%action.texify.DummyTextWizard.description"/>

            <separator/>
        </group>

        <!-- Insert: Sectioning -->
        <group id="texify.LatexMenu.Insert.Sectioning" class="nl.hannahsten.texifyidea.action.group.InsertSectioningActionGroup"
               text="%group.texify.LatexMenu.Insert.Sectioning.text" description="%group.texify.LatexMenu.Insert.Sectioning.description" popup="true">
            <add-to-group group-id="texify.LatexMenuEdit" anchor="first"/>

            <action class="nl.hannahsten.texifyidea.action.insert.InsertPartAction" id="texify.insert.sectioning.Part"
                    text="%action.texify.insert.sectioning.Part.text" description="%action.texify.insert.sectioning.Part.description" icon="nl.hannahsten.texifyidea.TexifyIcons.DOT_PART" />
            <action class="nl.hannahsten.texifyidea.action.insert.InsertChapterAction" id="texify.insert.sectioning.Chapter"
                    text="%action.texify.insert.sectioning.Chapter.text" description="%action.texify.insert.sectioning.Chapter.description" icon="nl.hannahsten.texifyidea.TexifyIcons.DOT_CHAPTER"/>
            <action class="nl.hannahsten.texifyidea.action.insert.InsertSectionAction" id="texify.insert.sectioning.Section"
                    text="%action.texify.insert.sectioning.Section.text" description="%action.texify.insert.sectioning.Section.description" icon="nl.hannahsten.texifyidea.TexifyIcons.DOT_SECTION" />
            <action class="nl.hannahsten.texifyidea.action.insert.InsertSubSectionAction" id="texify.insert.sectioning.Subsection"
                    text="%action.texify.insert.sectioning.Subsection.text" description="%action.texify.insert.sectioning.Subsection.description" icon="nl.hannahsten.texifyidea.TexifyIcons.DOT_SUBSECTION" />
            <action class="nl.hannahsten.texifyidea.action.insert.InsertSubSubSectionAction" id="texify.insert.sectioning.Subsubsection"
                    text="%action.texify.insert.sectioning.Subsubsection.text" description="%action.texify.insert.sectioning.Subsubsection.description" icon="nl.hannahsten.texifyidea.TexifyIcons.DOT_SUBSUBSECTION" />
            <action class="nl.hannahsten.texifyidea.action.insert.InsertParagraphAction" id="texify.insert.sectioning.Paragraph"
                    text="%action.texify.insert.sectioning.Paragraph.text" description="%action.texify.insert.sectioning.Paragraph.description" icon="nl.hannahsten.texifyidea.TexifyIcons.DOT_PARAGRAPH" />
            <action class="nl.hannahsten.texifyidea.action.insert.InsertSubParagraphAction" id="texify.insert.sectioning.Subparagraph"
                    text="%action.texify.insert.sectioning.Subparagraph.text" description="%action.texify.insert.sectioning.Subparagraph.description" icon="nl.hannahsten.texifyidea.TexifyIcons.DOT_SUBPARAGRAPH" />
        </group>

        <!-- Insert: Font Style -->
        <group id="texify.LatexMenu.Insert.FontStyle" class="nl.hannahsten.texifyidea.action.group.InsertFontStyleActionGroup"
               text="%group.texify.LatexMenu.Insert.FontStyle.text" description="%group.texify.LatexMenu.Insert.FontStyle.description" popup="true">
            <add-to-group group-id="texify.LatexMenuEdit" anchor="after" relative-to-action="texify.LatexMenu.Insert.Sectioning"/>

            <action class="nl.hannahsten.texifyidea.action.insert.InsertBoldfaceAction" id="texify.insert.fontstyle.BoldFace"
                    text="%action.texify.insert.fontstyle.BoldFace.text" description="%action.texify.insert.fontstyle.BoldFace.description" icon="nl.hannahsten.texifyidea.TexifyIcons.FONT_BOLD">
                <keyboard-shortcut first-keystroke="control alt shift B" keymap="$default"/>
            </action>

            <action class="nl.hannahsten.texifyidea.action.insert.InsertItalicsAction" id="texify.insert.fontstyle.Italics"
                    text="%action.texify.insert.fontstyle.Italics.text" description="%action.texify.insert.fontstyle.Italics.description" icon="nl.hannahsten.texifyidea.TexifyIcons.FONT_ITALICS">
                <keyboard-shortcut first-keystroke="control alt shift I" keymap="$default"/>
            </action>

            <action class="nl.hannahsten.texifyidea.action.insert.InsertUnderlineAction" id="texify.insert.fontstyle.Underline"
                    text="%action.texify.insert.fontstyle.Underline.text" description="%action.texify.insert.fontstyle.Underline.description" icon="nl.hannahsten.texifyidea.TexifyIcons.FONT_UNDERLINE" >
                <keyboard-shortcut first-keystroke="control alt shift U" keymap="$default"/>
            </action>

            <action class="nl.hannahsten.texifyidea.action.insert.InsertOverlineAction" id="texify.insert.fontstyle.Overline"
                    text="%action.texify.insert.fontstyle.Overline.text" description="%action.texify.insert.fontstyle.Overline.description" icon="nl.hannahsten.texifyidea.TexifyIcons.FONT_OVERLINE">
                <keyboard-shortcut first-keystroke="control alt shift O" keymap="$default"/>
            </action>

            <action class="nl.hannahsten.texifyidea.action.insert.InsertSmallCapsAction" id="texify.insert.fontstyle.SmallCaps"
                    text="%action.texify.insert.fontstyle.SmallCaps.text" description="%action.texify.insert.fontstyle.SmallCaps.description" icon="nl.hannahsten.texifyidea.TexifyIcons.FONT_SMALLCAPS">
                <keyboard-shortcut first-keystroke="control alt shift C" keymap="$default"/>
            </action>

            <action class="nl.hannahsten.texifyidea.action.insert.InsertTypewriterAction" id="texify.insert.fontstyle.Typewriter"
                    text="%action.texify.insert.fontstyle.Typewriter.text" description="%action.texify.insert.fontstyle.Typewriter.description" icon="nl.hannahsten.texifyidea.TexifyIcons.FONT_TYPEWRITER">
                <keyboard-shortcut first-keystroke="control alt shift T" keymap="$default"/>
            </action>

            <action class="nl.hannahsten.texifyidea.action.insert.InsertStrikethroughAction" id="texify.insert.fontstyle.Strikethrough"
                    text="%action.texify.insert.fontstyle.Strikethrough.text"
                    description="%action.texify.insert.fontstyle.Strikethrough.description" icon="nl.hannahsten.texifyidea.TexifyIcons.FONT_STRIKETHROUGH">
                <keyboard-shortcut first-keystroke="control alt shift S" keymap="$default"/>
            </action>

            <action class="nl.hannahsten.texifyidea.action.insert.InsertSlantedAction" id="texify.insert.fontstyle.Slanted"
                    text="%action.texify.insert.fontstyle.Slanted.text"
                    description="%action.texify.insert.fontstyle.Slanted.description"
                    icon="nl.hannahsten.texifyidea.TexifyIcons.FONT_SLANTED">
                <keyboard-shortcut first-keystroke="control alt shift L" keymap="$default"/>
            </action>

            <action class="nl.hannahsten.texifyidea.action.insert.InsertEmphasisAction" id="texify.insert.fontstyle.Emphasis"
                    text="%action.texify.insert.fontstyle.Emphasis.text" description="%action.texify.insert.fontstyle.Emphasis.description">
            </action>
        </group>
    </actions>
</idea-plugin>
