[*.{kt,kts}]
ktlint_standard_final-newline=disabled
ktlint_standard_no-wildcard-imports=disabled
ktlint_standard_parameter-list-wrapping=disabled
ktlint_standard_argument-list-wrapping=disabled
ktlint_standard_chain-wrapping=disabled
ktlint_standard_import-ordering=disabled
ktlint_standard_keyword-spacing=disabled
ktlint_standard_trailing-comma-on-call-site=disabled
ktlint_standard_multiline-if-else=disabled

insert_final_newline = false

ij_kotlin_else_on_new_line = true
ij_kotlin_catch_on_new_line = true
ij_kotlin_finally_on_new_line = true
ij_kotlin_name_count_to_use_star_import = 5
ij_kotlin_name_count_to_use_star_import_for_members = 3

ij_java_doc_add_blank_line_after_description = true
ij_java_doc_param_description_on_new_line = true
